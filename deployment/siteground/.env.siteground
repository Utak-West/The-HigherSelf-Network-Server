# SiteGround Cloud Hosting Optimization Configuration
# Jump Start Plan: 4 CPU, 8GB RAM, 40GB SSD

# Server Configuration
ENVIRONMENT=production
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=2
LOG_LEVEL=INFO
JSON_LOGS=true

# Redis Configuration - Optimized for 8GB RAM
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_MAX_CONNECTIONS=8
REDIS_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_SOCKET_TIMEOUT=5
REDIS_HEALTH_CHECK_INTERVAL=30
REDIS_CACHE_ENABLED=true
REDIS_SESSION_STORE_ENABLED=true
REDIS_RATE_LIMITING_ENABLED=true
REDIS_METRICS_ENABLED=true
REDIS_SLOW_QUERY_THRESHOLD=1.0

# MongoDB Configuration - Resource Optimized
MONGODB_URI=mongodb://localhost:27017/higherselfnetwork
MONGODB_MAX_POOL_SIZE=20
MONGODB_MIN_POOL_SIZE=5
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# Celery Configuration - CPU Optimized
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_WORKER_CONCURRENCY=2
CELERY_TASK_SOFT_TIME_LIMIT=300
CELERY_TASK_TIME_LIMIT=600

# Performance Monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Caching Strategy
CACHE_DEFAULT_TIMEOUT=300
CACHE_HOT_TIMEOUT=60
CACHE_WARM_TIMEOUT=300
CACHE_COLD_TIMEOUT=1800

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Security
SSL_ENABLED=true
CORS_ORIGINS=["https://yourdomain.com"]
WEBHOOK_SECRET=your_secure_webhook_secret_here

# Logging Configuration
LOG_FILE=logs/app.log
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=7

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=7
BACKUP_LOCATION=/home/backup

# Resource Limits
MAX_REQUEST_SIZE=10MB
MAX_UPLOAD_SIZE=50MB
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60

# Feature Flags for Resource Management
ENABLE_TYPEFORM=true
ENABLE_WOOCOMMERCE=true
ENABLE_ACUITY=true
ENABLE_AMELIA=true
ENABLE_USER_FEEDBACK=true
ENABLE_AI_PROVIDERS=true
ENABLE_REDIS=true
ENABLE_GOHIGHLEVEL=true

# Database Connection Optimization
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# Memory Management
PYTHON_GC_THRESHOLD=700,10,10
MALLOC_TRIM_THRESHOLD=128000
MALLOC_MMAP_THRESHOLD=131072

# SiteGround Specific Optimizations
SITEGROUND_OPTIMIZATION=true
SITEGROUND_PLAN=jump_start
SITEGROUND_CPU_CORES=4
SITEGROUND_RAM_GB=8
SITEGROUND_STORAGE_GB=40
SITEGROUND_BANDWIDTH_TB=5
