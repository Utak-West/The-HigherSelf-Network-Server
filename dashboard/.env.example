# HigherSelf Gaming Dashboard Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/higherself_network
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# API Configuration
API_BASE_URL=http://localhost:8000
DASHBOARD_API_PREFIX=/api/dashboard
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-session-secret-here

# Gaming Dashboard Features
ENABLE_3D_VISUALIZATION=true
ENABLE_PARTICLE_EFFECTS=true
ENABLE_REAL_TIME_UPDATES=true
WEBSOCKET_ENABLED=true

# Multi-Tenant Configuration
AM_CONSULTING_ENABLED=true
SEVEN_SPACE_ENABLED=true
HIGHERSELF_NETWORK_ENABLED=true

# External Integrations
NOTION_API_TOKEN=your-notion-token
NOTION_DATABASE_ID=your-database-id

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true
METRICS_COLLECTION_INTERVAL=30000

# Gaming Aesthetics
THEME_PRIMARY_COLOR=#31B2E0
THEME_GAMING_GREEN=#00ff88
THEME_GAMING_GOLD=#ffd700
THEME_GAMING_RED=#ff4444
THEME_GAMING_PURPLE=#8a2be2

# Performance Settings
MAX_CONCURRENT_CONNECTIONS=1000
CACHE_TTL=300
WEBSOCKET_HEARTBEAT_INTERVAL=30000

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_HELMET=true
ENABLE_CORS=true

# Development Settings
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_MODE=false
MOCK_DATA_ENABLED=false
