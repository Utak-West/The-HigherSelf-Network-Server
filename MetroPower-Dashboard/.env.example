# MetroPower Dashboard Environment Variables
# Copy this file to .env and update the values as needed

# Application Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0
APP_NAME=MetroPower Dashboard
APP_VERSION=1.0.0
COMPANY_NAME=MetroPower
BRANCH_NAME=Tucker Branch

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Database Configuration (if using external database)
# DATABASE_URL=postgresql://username:password@host:port/database
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=metropower_dashboard
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_SSL=true

# Redis Configuration (if using external Redis)
# REDIS_URL=redis://username:password@host:port
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# Email Configuration
FROM_EMAIL=noreply@metropower.com
FROM_NAME=MetroPower Dashboard
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=xlsx,xls,csv,pdf
EXPORT_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://your-domain.vercel.app,https://your-custom-domain.com
WEBSOCKET_CORS_ORIGIN=https://your-domain.vercel.app,https://your-custom-domain.com

# Logging Configuration
LOG_LEVEL=info
DISABLE_FILE_LOGGING=true

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_RETENTION_DAYS=90

# Feature Flags
DEMO_MODE_ENABLED=true

# Vercel Specific
VERCEL=1
