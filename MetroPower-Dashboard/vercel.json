{
  "version": 2,
  "name": "metropower-dashboard",
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": "backend/**"
      }
    },
    {
      "src": "api/debug.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": "backend/**"
      }
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/debug/(.*)",
      "dest": "/api/debug.js"
    },
    {
      "src": "/api/debug",
      "dest": "/api/debug.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/health",
      "dest": "/api/index.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/exports/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/api-docs/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/favicon.ico",
      "dest": "/frontend/assets/images/favicon.svg"
    },
    {
      "src": "/assets/images/(.*)",
      "dest": "/frontend/assets/images/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/frontend/assets/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "/frontend/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/frontend/js/$1"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
      "dest": "/frontend/$1"
    },
    {
      "src": "/",
      "dest": "/frontend/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "3001",
    "HOST": "0.0.0.0",
    "APP_NAME": "MetroPower Dashboard",
    "APP_VERSION": "1.0.0",
    "COMPANY_NAME": "MetroPower",
    "BRANCH_NAME": "Tucker Branch",
    "JWT_EXPIRES_IN": "24h",
    "JWT_REFRESH_EXPIRES_IN": "7d",
    "FROM_EMAIL": "noreply@metropower.com",
    "FROM_NAME": "MetroPower Dashboard",
    "MAX_FILE_SIZE": "10485760",
    "ALLOWED_FILE_TYPES": "xlsx,xls,csv,pdf",
    "EXPORT_RETENTION_DAYS": "30",
    "RATE_LIMIT_WINDOW_MS": "900000",
    "RATE_LIMIT_MAX_REQUESTS": "100",
    "LOG_LEVEL": "info",
    "BACKUP_ENABLED": "false",
    "BACKUP_RETENTION_DAYS": "90",
    "DEMO_MODE_ENABLED": "true",
    "DISABLE_FILE_LOGGING": "true",
    "VERCEL": "1"
  },
  "regions": ["iad1"],
  "github": {
    "silent": true
  }
}
