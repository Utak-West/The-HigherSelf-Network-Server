# ==== NOTION API CONFIGURATION ====
# Required for all operations - obtain from https://www.notion.so/my-integrations
NOTION_API_TOKEN=secret_your_token_here

# Parent page ID where databases will be created during setup
# Required only for the initial database setup
NOTION_PARENT_PAGE_ID=your_parent_page_id_here

# ==== NOTION DATABASE IDs ====
# These will be automatically populated by the database setup tool
# DO NOT modify these manually unless you're connecting to existing databases
NOTION_BUSINESS_ENTITIES_DB=your_business_entities_db_id
NOTION_AGENT_REGISTRY_DB=your_agent_registry_db_id
NOTION_WORKFLOWS_LIBRARY_DB=your_workflows_library_db_id
NOTION_ACTIVE_WORKFLOW_INSTANCES_DB=your_active_workflow_instances_db_id
NOTION_API_INTEGRATIONS_DB=your_api_integrations_db_id
NOTION_DATA_TRANSFORMATIONS_DB=your_data_transformations_db_id
NOTION_USE_CASES_DB=your_use_cases_db_id
NOTION_NOTIFICATIONS_TEMPLATES_DB=your_notifications_templates_db_id
NOTION_AGENT_COMMUNICATION_DB=your_agent_communication_db_id
NOTION_TASKS_DB=your_tasks_db_id

# Third-party API credentials
# HubSpot
HUBSPOT_API_KEY=your_hubspot_api_key

# TypeForm
TYPEFORM_API_KEY=your_typeform_api_key

# Airtable
AIRTABLE_API_KEY=your_airtable_api_key
AIRTABLE_BASE_ID=your_airtable_base_id

# Amelia
AMELIA_API_KEY=your_amelia_api_key
AMELIA_ENDPOINT=your_amelia_endpoint

# WooCommerce
WOOCOMMERCE_CONSUMER_KEY=your_woocommerce_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=your_woocommerce_consumer_secret
WOOCOMMERCE_URL=your_woocommerce_url

# TutorLM
TUTORLM_API_KEY=your_tutorlm_api_key

# Server configuration
LOG_LEVEL=INFO
SERVER_PORT=8000
WEBHOOK_SECRET=your_webhook_secret_here
