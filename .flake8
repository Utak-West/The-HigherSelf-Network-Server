[flake8]
max-line-length = 88
extend-ignore = E203,E501,W503,E402,F401

exclude = .git,__pycache__,build,dist,.venv,venv,.eggs,*.egg,.tox,.coverage,.coverage.*,.cache,nosetests.xml,coverage.xml,*.cover,*.log,.mypy_cache,.pytest_cache,migrations

per-file-ignores = __init__.py:F401,*/settings*.py:E501,test_*.py:F403,test_*.py:F405,test_*.py:F841

max-complexity = 10
import-order-style = google
application-import-names = agents,api,config,models,services,utils,knowledge,workflow
