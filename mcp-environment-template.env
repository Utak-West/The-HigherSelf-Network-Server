# HigherSelf Network MCP Servers Environment Variables
# Copy this file to .env.mcp and fill in your actual credentials

# =============================================================================
# NOTION INTEGRATION (Primary Hub) - REQUIRED
# =============================================================================
# Get your token from: https://www.notion.so/profile/integrations
# 1. Go to https://www.notion.so/profile/integrations
# 2. Click "Create new integration"
# 3. Name it "HigherSelf Network MCP"
# 4. Copy the integration token (starts with "secret_")
# 5. Grant access to your databases
NOTION_TOKEN=secret_your_notion_integration_token_here

# =============================================================================
# SLACK INTEGRATION (Team Communication) - OPTIONAL
# =============================================================================
# Get these tokens from your Slack app configuration
# 1. Go to https://api.slack.com/apps
# 2. Create a new app or use existing one
# 3. Get Bot User OAuth Token (starts with "xoxb-")
# 4. Get your Team/Workspace ID
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_TEAM_ID=your-team-id-here

# =============================================================================
# HIGHERSELF NETWORK SPECIFIC CONFIGURATIONS
# =============================================================================
# The 7 Space specific settings
THE7SPACE_NOTION_DB_ID=your_the7space_contacts_db_id
THE7SPACE_WORDPRESS_API_URL=https://the7space.com/wp-json/wp/v2/

# AM Consulting specific settings
AM_CONSULTING_NOTION_DB_ID=your_am_consulting_contacts_db_id
AM_CONSULTING_CRM_API_KEY=your_am_consulting_crm_key

# HigherSelf Core specific settings
HIGHERSELF_CORE_NOTION_DB_ID=your_higherself_core_contacts_db_id
HIGHERSELF_CORE_COMMUNITY_API_KEY=your_community_api_key

# =============================================================================
# AGENT ENHANCEMENT SETTINGS
# =============================================================================
# Enable enhanced agent capabilities
MCP_ENHANCED_AGENTS=true
MCP_REAL_TIME_PROCESSING=true
MCP_MULTI_ENTITY_SUPPORT=true
MCP_BIDIRECTIONAL_SYNC=true
